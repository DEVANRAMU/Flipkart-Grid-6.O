#include <Wire.h>
#include <OV7670.h>

OV7670 camera;

void setup() {
    Serial.begin(9600);
    camera.begin();
}

void loop() {
    // Capture an image
    camera.capture();
    
    // Send image data to Raspberry Pi via Serial
    for (int i = 0; i < camera.getImageSize(); i++) {
        Serial.write(camera.getPixel(i));
    }
    
    delay(1000); // Capture every second
}
